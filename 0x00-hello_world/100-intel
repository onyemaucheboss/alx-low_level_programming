#!/bin/bash
# Generate assembly code (Intel syntax) from a C file

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE variable is not set."
    exit 1
fi

# Extract the base name (without extension) of the C file
base_name="${CFILE%.c}"

# Generate assembly code in Intel syntax
gcc -S -masm=intel "$CFILE" -o "$base_name.s"

echo "Assembly code generated and saved in $base_name.s"
